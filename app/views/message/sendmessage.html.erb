<%=form_for @message, :url => { :action => "messageprocess" }  do |f| %>
    <div class="field">
      <%= f.label :subject %><br>
      <%= f.text_field :subject %>
    </div>

    <div class="field">
      <%= f.label :message_content %><br>
      <%= f.text_area :message_content %>
    </div>

    <%=f.submit :post %>
<% end %>