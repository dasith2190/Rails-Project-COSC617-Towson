<h1>Posts#new</h1>
<p>Find me in app/views/posts/new.html.erb</p>

<%=form_for @posts, :url => { :action => "create" }  do |f| %>
    <div class="field">
     <%= f.label :title %><br>
     <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :Description %><br>
      <%= f.text_area :description %>
    </div>

    <%=f.submit :post %>
<% end %>