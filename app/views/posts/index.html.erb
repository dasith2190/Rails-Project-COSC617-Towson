<div class="header-content">


  <div class="search">
    <p> <%= form_tag '/search/searchresult' %>


      <%= text_field_tag "search", nil, :placeholder => 'Where do you want to go?' %>
      <input placeholder="Check In" name="check-in" type="text" onblur="(this.type='text')" onfocus="(this.type='date')"  id="check-in">
      <input placeholder="Check Out" name="check-out" type="text" onblur="(this.type='text')" onfocus="(this.type='date')"  id="check-out">


      <%= submit_tag 'Search'%></p>
  </div>
</div>

